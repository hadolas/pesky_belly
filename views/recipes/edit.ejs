<% include ../partials/header %>

<div class="container">
    
    <div class="row">
        <h1 style="text-align: center">EDIT <%=recipe.title%>!</h1>
        <div style="width:30%;margin: 35px auto;">
            <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST">
                <div class="form-group"><input class="form-control" type="text" name="recipe[title]" value="<%=recipe.title%>"></div>
                <div class="form-group"><input class="form-control" type="text" name="recipe[image]" value="<%=recipe.image%>"></div>
                <div class="form-group"><input class="form-control" type="text" name="recipe[description]" value="<%=recipe.description%>"></div>
                <div class="form-group"><button class="btn btn-lg btn-block">Update</button></div>
            </form> 
            <a href="/recipes">Back to Recipes Page</a>   
        </div>
    </div>
    
</div>



<% include ../partials/footer %>
